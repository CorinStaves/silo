dependsOn(':util')
dependsOn(':datatable')
dependsOn(':java$6_windows_32bit')

jarBaseName = 'sawdust-datatable-sql-core'
version = '1.0'
specificationTitle = 'Sawdust Datatable Sql Classes'
specificationVendor = 'Parsons Brinckerhoff'
implementationTitle = 'com.pb.sawdust.tabledata.sql'
implementationVendor = 'Parsons Brinckerhoff'
jreTools = true

apply from: '../../core/build/base_build.gradle'

sourceSets {
    test.java.srcDirs += '../../core/datatable/src/test/java'
    main {
        java.exclude('**/impl/h2/*')
        java.exclude('**/impl/hsqldb/*')
        java.exclude('**/impl/derby/*')
        java.exclude('**/impl/sqlite/*')
    }
    test {
        java.exclude('**')
    }
}
