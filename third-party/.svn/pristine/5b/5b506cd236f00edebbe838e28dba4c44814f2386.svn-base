dependsOn(':util')
dependsOn(':datatable')
dependsOn(':datatable_sql')
dependsOn(':java$6_windows_32bit')

jarBaseName = 'sawdust-datatable-sql-derby'
version = '1.0'
specificationTitle = 'Sawdust Datatable Sql Derby Classes'
specificationVendor = 'Parsons Brinckerhoff'
implementationTitle = 'com.pb.sawdust.tabledata.sql (.impl.derby)'
implementationVendor = 'Parsons Brinckerhoff'
baseTestClass = 'com.pb.sawdust.tabledata.sql.impl.derby.DerbyPackageTests'
baseDependencies = ['../../third_party/derby/10.8/derby.jar']
testDependencies = ['../../third_party/junit/4.8/junit-4.8.2.jar']
//skipProjectTests = true
jreTools = true

apply from: '../../core/build/base_build.gradle'

sourceSets {
    test.java.srcDirs += '../../core/datatable/src/test/java'
    main {
        java.exclude('**/sql/*.java')
        java.exclude('**/sql/impl/*.java')
        java.exclude('**/impl/h2/**')
        java.exclude('**/impl/hsqldb/**')
        java.exclude('**/impl/sqlite/**')
    }
    test {
        java.exclude('**/h2/**')
        java.exclude('**/hsqldb/**')
        java.exclude('**/sqlite/**')
        java.exclude('**/ImplPackageTests.java')
        java.exclude('**/SqlPackageTests.java')
    }
}
