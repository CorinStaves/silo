dependsOn(':util')
dependsOn(':datatable')
dependsOn(':datatable_sql')
dependsOn(':java$6_windows_32bit')

jarBaseName = 'sawdust-datatable-sql-h2'
version = '1.0'
specificationTitle = 'Sawdust Datatable Sql H2 Classes'
specificationVendor = 'Parsons Brinckerhoff'
implementationTitle = 'com.pb.sawdust.tabledata.sql (.impl.h2)'
implementationVendor = 'Parsons Brinckerhoff'
baseTestClass = 'com.pb.sawdust.tabledata.sql.impl.h2.H2PackageTests'
baseDependencies = ['../../third_party/h2/1.3/h2-1.3.159.jar']
testDependencies = ['../../third_party/junit/4.8/junit-4.8.2.jar']
jreTools = true

apply from: '../../core/build/base_build.gradle'

sourceSets {
    test.java.srcDirs += '../../core/datatable/src/test/java'
    main {
        java.exclude('**/sql/*.java')
        java.exclude('**/sql/impl/*.java')
        java.exclude('**/impl/derby/**')
        java.exclude('**/impl/hsqldb/**')
        java.exclude('**/impl/sqlite/**')
    }
    test {
        java.exclude('**/derby/**')
        java.exclude('**/hsqldb/**')
        java.exclude('**/sqlite/**')
        java.exclude('**/ImplPackageTests.java')
        java.exclude('**/SqlPackageTests.java')
    }
}
